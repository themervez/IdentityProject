@model List<AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<table class="table table-bordered table-striped">
    <tr>
        <td>#</td>
        <td>User Name</td>
        <td>E-mail</td>
    </tr>
    @if (Model.Count()==0)
    {
        <tr>
            <td colspan="3">Henüz bir üye yoktur!</td>
        </tr>
    }
    else
    {
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.UserName</td>
                <td>@item.Email</td>
            </tr>
        }

    }
</table>

